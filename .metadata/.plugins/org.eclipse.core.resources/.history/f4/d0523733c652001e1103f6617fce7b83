package com.ryu.app;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

@Controller
public class CTRL {

	@RequestMapping("/")
	public @ResponseBody String root() {
		return "루트요청";
	}
	
	// request 자체가 not POJO인 servlet 객체이기때문에 활용도가 낮다
	// ★
	@RequestMapping("/test")
	public String test(VO vo, Model model) {
		System.out.println("vo: "+vo);
		model.addAttribute("apple",vo.getId());
		// 커맨드객체를 이용하여 model을 활용하지 않고도 값 출력가능
		
		return "test";
	}
	@RequestMapping("/test02")
	public String test02(@RequestParam("id")String id, Model model) {
		System.out.println("vo: "+vo);
		model.addAttribute("apple",vo.getId());
		// 커맨드객체를 이용하여 model을 활용하지 않고도 값 출력가능
		
		return "test";
	}
}
