package com.ryu.app;

import org.springframework.validation.Errors;
import org.springframework.validation.Validator;

import com.oracle.wls.shaded.org.apache.xml.utils.SystemIDResolver;

public class VOValidator implements Validator{

	@Override
	public boolean supports(Class<?> clazz) {
		// 유효성 검사할 객체의 클래스 정보를 반환
		return VO.class.isAssignableFrom(clazz);
	}

	@Override
	public void validate(Object target, Errors errors) {
		// target : 유효성 검사할 객체
		// errors : 검증이 통과되지 못한 경우, 왜 통과가 안되었는지를 반환
		
		VO vo=(VO)target;
		String id=vo.getId();
		if(id==null || id.isEmpty() || id.isBlank() || id.trim().isEmpty() || id.trim().isBlank()) {
			System.out.println("로그 : id값이 올바르지않습니다");
			errors.rejectValue("id", "id값없음");
		}
	}

	
	
}
