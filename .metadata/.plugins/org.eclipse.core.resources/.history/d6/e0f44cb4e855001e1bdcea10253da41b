package com.ryu.app;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.BeanPropertyRowMapper;
import org.springframework.jdbc.core.JdbcTemplate;

public class BoardDAO {

	// 의존 관계(멤버변수)
	@Autowired
	private JdbcTemplate jdbcTemplate;
	
	// 응집도를 높여주기
	private final String SELECTALL="SELECT * FROM MEMBER";
	private final String SELECTONE="SELECT * FROM MEMBER WHERE MID=?";
	private final String INSERT="INSERT INTO MEMEBR (MID, MPW) VALUE (?, ?)";
	private final String UPDATE="UPDATE MEMBER SET MPW=? WHERE MID=?";
	private final String DELETE="DELETE FROM MEMBER WHERE MID=?";
	
	
	public List<MemberDTO> selectAll(MemberDTO mDTO){
		// 반복적인 로직을 대신 수행하는 "템플릿 패턴"을 활용
//		jdbcTemplate.query(query문, new 받아올클래스타입)
		jdbcTemplate.query(SELECTALL, new BeanPropertyRowMapper<MemberDTO>(MemberDTO.class));
		return null;
	}
	public MemberDTO selectOne(MemberDTO mDTO){
		Object args[]= {mDTO.getMid()};
		return jdbcTemplate.queryForObject(SELECTONE, args, new BeanPropertyRowMapper<MemberDTO>(MemberDTO.class));
		
	}
	public boolean insert(MemberDTO mDTO) {
		jdbcTemplate.update(INSERT,mDTO.getMid(), mDTO.getMpw());
		return false;
	}
	public boolean update(MemberDTO mDTO) {
		jdbcTemplate.update(UPDATE, mDTO.getMpw(), mDTO.getMid());
		return false;
	}
	public boolean delete(MemberDTO mDTO) {
		jdbcTemplate.update(DELETE, mDTO.getMid());
		return false;
	}
	
}
